<!DOCTYPE html>
<html lang="no">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Min Geometry Dash Kopi</title>
    <style>
        /* --- CSS --- */
        body {
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #202020;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: white;
            overflow: hidden;
        }

        #game-container {
            position: relative;
            box-shadow: 0 0 20px rgba(0,0,0,0.5);
        }

        canvas {
            background: linear-gradient(to bottom, #004e92, #000428);
            display: block;
            border: 4px solid #fff;
        }

        #ui-layer {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            pointer-events: none; /* Lar klikk gå gjennom til canvas */
        }

        .hidden {
            display: none !important;
        }

        h1 {
            font-size: 40px;
            text-shadow: 2px 2px #000;
            margin: 0 0 20px 0;
        }

        p {
            font-size: 18px;
            background: rgba(0, 0, 0, 0.6);
            padding: 10px 20px;
            border-radius: 5px;
        }

        #score-board {
            position: absolute;
            top: 10px;
            right: 20px;
            font-size: 24px;
            font-weight: bold;
            text-shadow: 1px 1px 2px black;
        }
    </style>
</head>
<body>

    <div id="game-container">
        <canvas id="gameCanvas" width="800" height="400"></canvas>
        <div id="score-board">Score: 0</div>
        
        <div id="ui-layer">
            <div id="start-screen">
                <h1>Geometry Dash Lite</h1>
                <p>Trykk <strong>MELLOMROM</strong> eller klikk for å hoppe</p>
                <p style="margin-top:10px; font-size: 14px;">Trykk for å starte</p>
            </div>
            <div id="game-over-screen" class="hidden">
                <h1>Game Over!</h1>
                <p>Trykk for å prøve igjen</p>
            </div>
        </div>
    </div>

    <script>
        /* --- JAVASCRIPT --- */
        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');
        const startScreen = document.getElementById('start-screen');
        const gameOverScreen = document.getElementById('game-over-screen');
        const scoreBoard = document.getElementById('score-board');

        // Spillstatus
        let gameRunning = false;
        let score = 0;
        let frames = 0;
        let gameSpeed = 6;

        // Spiller (Kuben)
        const player = {
            x: 100,
            y: 300,
            width: 30,
            height: 30,
            dy: 0, // Hastighet vertikalt
            jumpPower: -11,
            gravity: 0.6,
            grounded: false,
            color: '#f1c40f',
            angle: 0
        };

        // Hindringer (Pigger)
        let obstacles = [];

        // Håndter input (Tastatur og Mus/Touch)
        function handleInput(e) {
            if (e.type === 'keydown' && e.code !== 'Space') return;
            if (e.type === 'keydown') e.preventDefault(); // Hindre scrolling

            if (!gameRunning) {
                resetGame();
                return;
            }

            if (player.grounded) {
                player.dy = player.jumpPower;
                player.grounded = false;
            }
        }

        window.addEventListener('keydown', handleInput);
        window.addEventListener('mousedown', handleInput);
        window.addEventListener('touchstart', handleInput);

        // Funksjon for å starte/restarte
        function resetGame() {
            gameRunning = true;
            score = 0;
            frames = 0;
            obstacles = [];
            gameSpeed = 6;
            
            player.y = canvas.height - player.height - 50; // Bakkenivå
            player.dy = 0;
            player.angle = 0;
            
            startScreen.classList.add('hidden');
            gameOverScreen.classList.add('hidden');
            
            requestAnimationFrame(gameLoop);
        }

        // Tegn spilleren
        function drawPlayer() {
            ctx.save();
            ctx.translate(player.x + player.width/2, player.y + player.height/2);
            
            // Roter kuben når man hopper
            if (!player.grounded) {
                player.angle += 0.1;
            } else {
                // Rett opp kuben når den lander
                player.angle = Math.round(player.angle / (Math.PI/2)) * (Math.PI/2);
            }
            ctx.rotate(player.angle);

            ctx.fillStyle = player.color;
            ctx.fillRect(-player.width/2, -player.height/2, player.width, player.height);
            
            // En liten kant rundt kuben
            ctx.strokeStyle = "black";
            ctx.lineWidth = 2;
            ctx.strokeRect(-player.width/2, -player.height/2, player.width, player.height);
            
            ctx.restore();
        }

        // Tegn bakken
        function drawGround() {
            ctx.fillStyle = "#fff";
            ctx.fillRect(0, canvas.height - 50, canvas.width, 50);
            ctx.fillStyle = "#000";
            ctx.fillRect(0, canvas.height - 50, canvas.width, 2); // Topplinje
        }

        // Håndter hindringer
        function handleObstacles() {
            // Legg til ny hindring hver 90-140 frame (tilfeldig)
            if (frames % Math.floor(Math.random() * 50 + 90) === 0) {
                obstacles.push({
                    x: canvas.width,
                    y: canvas.height - 50 - 30, // 30 er høyden på piggen
                    width: 30,
                    height: 30,
                    type: 'spike'
                });
            }

            for (let i = 0; i < obstacles.length; i++) {
                let obs = obstacles[i];
                obs.x -= gameSpeed;

                // Tegn trekant (pigg)
                ctx.fillStyle = "red";
                ctx.beginPath();
                ctx.moveTo(obs.x, obs.y + obs.height);
                ctx.lineTo(obs.x + obs.width / 2, obs.y);
                ctx.lineTo(obs.x + obs.width, obs.y + obs.height);
                ctx.fill();
                ctx.stroke(); // Svart kant

                // Kollisjonssjekk (Enkel boks-sjekk med litt margin)
                if (
                    player.x < obs.x + obs.width - 5 &&
                    player.x + player.width > obs.x + 5 &&
                    player.y < obs.y + obs.height - 5 &&
                    player.y + player.height > obs.y + 5
                ) {
                    gameOver();
                }

                // Fjern hindringer som er utenfor skjermen
                if (obs.x + obs.width < 0) {
                    obstacles.shift();
                    score++;
                    scoreBoard.innerText = "Score: " + score;
                    i--;
                }
            }
        }

        function gameOver() {
            gameRunning = false;
            gameOverScreen.classList.remove('hidden');
        }

        // Hovedloopen
        function gameLoop() {
            if (!gameRunning) return;

            ctx.clearRect(0, 0, canvas.width, canvas.height);

            // Fysikk
            player.dy += player.gravity;
            player.y += player.dy;

            // Bakkesjekk
            if (player.y + player.height > canvas.height - 50) {
                player.y = canvas.height - 50 - player.height;
                player.dy = 0;
                player.grounded = true;
            } else {
                player.grounded = false;
            }

            drawGround();
            handleObstacles();
            drawPlayer();

            frames++;
            requestAnimationFrame(gameLoop);
        }
        
        // Start tegning av bakgrunn før spillet starter
        ctx.fillStyle = "#fff";
        ctx.fillRect(0, canvas.height - 50, canvas.width, 50);
        drawPlayer();

    </script>
</body>
</html>
